@model CNW_Shopping.Areas.Admin.Models.Entity.DanhMuc

@{
    ViewBag.Title = "ThemDanhMuc";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Areas/Admin/Views/Home/Index">Trang chủ</a>
            </li>
            <li class="breadcrumb-item active">Quản lý danh mục</li>
            <li class="breadcrumb-item active">
                <strong>Thêm Mới</strong>
            </li>
        </ol>

        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Thêm danh mục
            </div>
            <div class="card-body">
                <div class="ibox ">
                    <div class="ibox-content">
                        <form action="ThemDanhMuc" method="post">
                            <div class="form-group  row">
                                <label class="col-sm-2 col-form-label">Tên Danh Mục</label>
                                <div class="col-sm-10"><input type="text" name="ghichu" class="form-control"></div>
                            </div>


                            <div class="hr-line-dashed"></div>
                            <div class="form-group row">
                                <div class="col-sm-4 col-sm-offset-2">
                                    <a class="btn btn-primary btn-sm" href="~/DanhMuc/IndexDanhMuc">Hủy Bỏ</a>
                                    <button class="btn btn-primary btn-sm" type="submit">Thêm mới</button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
            </div>

        </div>
    <!-- /.container-fluid -->
    <!-- Sticky Footer -->

</div>
<!-- /.content-wrapper -->
<!-- /#wrapper -->


